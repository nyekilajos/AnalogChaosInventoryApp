<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_width"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/items_row_arrow"
            android:layout_width="@dimen/touchable_item_size_small"
            android:layout_height="@dimen/touchable_item_size_small"
            android:src="@drawable/ic_chevron_right_grey600_36dp" />

        <TextView
            android:id="@+id/items_row_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_padding_small"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/items_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_padding_small"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/items_row_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_padding_small"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/items_row_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_padding_small"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/items_row_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_padding_small"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/items_row_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ui_padding_small"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_width"
        android:background="@color/divider" />

</LinearLayout>